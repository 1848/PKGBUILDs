# $Id: PKGBUILD 134545 2011-08-05 13:19:02Z ibiru $
# Maintainer: Ionut Biru <ibiru@archlinux.org>

# ALARM: Kevin Mihelich <kevin@plugapps.com>
#  - configure option --enable-shared isn't supported for us

plugrel=1

pkgname=libvpx
pkgver=0.9.7
pkgrel=1
pkgdesc="The VP8 Codec SDK"
arch=('i686' 'x86_64')
url="http://www.webmproject.org/"
license=('BSD')
depends=('glibc')
makedepends=('yasm')
source=(http://webm.googlecode.com/files/${pkgname}-v${pkgver}.tar.bz2)
sha1sums=('639596df7182a93db83f61af8f5bb5b6a13dcf63')

build() {
    cd "${srcdir}/${pkgname}-v${pkgver}"
    ./configure --prefix=/usr --enable-vp8 \
        --enable-postproc \
        --enable-pic \
        --disable-install-docs \
        --disable-install-srcs
    make
}

package() {
    cd "${srcdir}/${pkgname}-v${pkgver}"
    make DIST_DIR="$pkgdir/usr" install
    install -D -m 0644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
