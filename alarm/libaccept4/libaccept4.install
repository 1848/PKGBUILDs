# add it to the ld.so.preload
post_install() {
  echo "/usr/lib/libaccept4.so" >> /etc/ld.so.preload
}

post_upgrade() {
  post_remove()
  post_install()
}

# remove from ld.so.preload
post_remove() {
  if [ -f /etc/ld.so.preload ]; then
    sed -i '/libaccept4\.so/d' /etc/ld.so.preload
  fi;
}

