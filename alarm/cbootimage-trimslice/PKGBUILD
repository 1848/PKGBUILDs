# cbootimage for TrimSlice
# Maintainer: Kevin Mihelich <kevin@archlinuxarm.org>

buildarch=4

pkgname=cbootimage-trimslice
pkgver=r20.d16cda0
pkgrel=1
pkgdesc="TrimSlice specific cbootimage utility"
arch=('armv7h')
url="https://gitorious.org/cbootimage/cbootimage"
makedepends=('git')
license=('GPL')
source=("git://gitorious.org/cbootimage/cbootimage.git#branch=trimslice")
md5sums=('SKIP')

pkgver() {
  cd cbootimage
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd cbootimage
  make
}

package() {
  cd cbootimage

  mkdir -p "${pkgdir}"/usr/bin
  cp bct_dump cbootimage "${pkgdir}"/usr/bin
}
